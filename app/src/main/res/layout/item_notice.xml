<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="12dp"
    android:elevation="1dp"
    android:clickable="true"
    android:layout_marginVertical="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_notice_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_account_circle_black_36dp"
            android:layout_margin="6dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/text_notice"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="테스트용테스트용"
                android:textSize="18dp"
                android:textColor="#000"
                android:padding="3dp" />

            <TextView
                android:id="@null"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="26dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="새로운모임에 가입(제작)하셨습니다."
                android:textSize="11dp"
                android:textColor="#000"
                android:padding="3dp" />
        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_brightness_1_black_24dp"
                android:tint="#BFFF0000"/>
            <TextView
                android:id="@+id/text_room_unread"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#FFFEFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="12"/>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>